<UserControl x:Class="Sérieathon.UC.main_window.Marathon.marathon_windows.UC_Marathon_Jour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sérieathon.UC.main_window.Marathon.marathon_windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Jour 1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <WrapPanel Grid.Row="1">
            <local:UC_Marathon_Episode/>
            <local:UC_Marathon_Episode Height="100" Width="200" Margin="20"/>
            <local:UC_Marathon_Episode Height="100" Width="200" Margin="20"/>
        </WrapPanel>

    </Grid>
</UserControl>